@model string
@{
    ViewBag.Title = "ChangeUserName";
}

<form action="@Url.Action("ChangeUserName", "Account")" method="post">
    @Html.AntiForgeryToken()
<div class="row marginb">
    <div class="col-xs-4">
        Enter new Username
        <input type="text" name="UserName" class="form-control" required />@ViewBag.response
    </div>
</div>
    <button type="submit" class="btn btn-primary">Update</button>
</form><br />
Changing your username will log you out.